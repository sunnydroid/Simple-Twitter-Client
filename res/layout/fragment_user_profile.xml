<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivProfilePicTweetTimeline"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvUsernameTweetTimeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/ivProfilePicTweetTimeline"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvUserDescriptionTweetTimeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUsernameTweetTimeline"
        android:layout_below="@+id/tvUsernameTweetTimeline"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFollowersTweetTimeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivProfilePicTweetTimeline"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFollowingTweetTimeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvFollowersTweetTimeline"
        android:layout_alignBottom="@+id/tvFollowersTweetTimeline"
        android:layout_alignLeft="@+id/tvUserDescriptionTweetTimeline"
        android:text="TextView" />

</RelativeLayout>
